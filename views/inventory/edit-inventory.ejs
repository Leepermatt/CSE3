<!-- View content heading -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } %>
        <%- messages() %>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <form id="updateForm" action="/inv/update" method="POST">
                        <div>
                            <label for="inv_make">Update Make</label>
                            <input type="text" id="inv_make" name="inv_make" required
                                value="<%= locals.inv_make || '' %>">
                        </div>

                        <div>
                            <label for="inv_model">Update Model</label>
                            <input type="text" id="inv_model" name="inv_model" required
                                value="<%= locals.inv_model || '' %>">
                        </div>

                        <div>
                            <label for="inv_year">Update Year</label>
                            <input type="number" id="inv_year" name="inv_year" min="1900" max="2099" required
                                value="<%= locals.inv_year || '' %>">
                        </div>

                        <div>
                            <label for="inv_description">Update Description</label>
                            <input type="text" id="inv_description" name="inv_description" required
                                value="<%= locals.inv_description || '' %>">
                        </div>

                        <!-- Prefilled Read-only Path for Picture -->
                        <div>
                            <label for="inv_image">Update Picture</label>
                            <input type="text" id="inv_image" name="inv_image"
                                value="<%= locals.inv_image || '/images/vehicles/no-image-tn.png' %>" readonly>
                        </div>

                        <!-- Prefilled Read-only Path for Thumbnail -->
                        <div>
                            <label for="inv_thumbnail">Update Thumbnail</label>
                            <input type="text" id="inv_thumbnail" name="inv_thumbnail"
                                value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>" readonly>
                        </div>

                        <div>
                            <label for="inv_price">Update Price</label>
                            <input type="number" id="inv_price" name="inv_price" step="0.01" required
                                value="<%= locals.inv_price || '' %>">
                        </div>

                        <div>
                            <label for="inv_miles">Update Miles</label>
                            <input type="number" id="inv_miles" name="inv_miles" required
                                value="<%= locals.inv_miles || '' %>">
                        </div>

                        <div>
                            <label for="classification_id">Update Classification</label>
                            <input type="text" id="classification_id" name="classification_id" required
                                value="<%= locals.classification_id || '' %>">
                        </div>

                        <div>
                            <label for="inv_color">Update Color</label>
                            <input type="text" id="inv_color" name="inv_color" required
                                value="<%= locals.inv_color || '' %>">
                        </div>

                        <!-- Hidden field for inv_id -->
                        <input type="hidden" name="inv_id" value="<%= locals.inv_id || '' %>">

                        <div>
                            <button type="submit" disabled>Modify Inventory</button>


                        </div>
                        <script src="/js/inv-update.js"></script>
                    </form>