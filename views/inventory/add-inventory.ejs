<!-- View content heading -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } %>
        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <form action="/inventory/add-inventory" method="POST">
                        <div>
                            <label for="classificationList">Classification</label>
                            <%- classificationList %> <!-- Dropdown generated by buildClassificationList -->
                        </div>

                        <div>
                            <label for="inv_make">Make</label>
                            <input type="text" id="inv_make" name="inv_make"
                                value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" required>
                        </div>

                        <div>
                            <label for="inv_model">Model</label>
                            <input type="text" id="inv_model" name="inv_model"
                                value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" required>
                        </div>

                        <div>
                            <label for="inv_year">Year</label>
                            <input type="number" id="inv_year" name="inv_year" min="1900" max="2099"
                                value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" required>
                        </div>

                        <div>
                            <label for="inv_price">Price</label>
                            <input type="number" id="inv_price" name="inv_price" step="0.01"
                                value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" required>
                        </div>

                        <div>
                            <label for="inv_miles">Miles</label>
                            <input type="number" id="inv_miles" name="inv_miles"
                                value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" required>
                        </div>

                        <div>
                            <label for="inv_color">Color</label>
                            <input type="text" id="inv_color" name="inv_color"
                                value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" required>
                        </div>

                        <div>
                            <button type="submit">Add Inventory</button>
                        </div>
                    </form>